<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1,maximum-scale=1,user-scalable=no" />

    <title>Impermeability map</title>

    <link rel="stylesheet" href="https://js.arcgis.com/4.19/esri/themes/dark/main.css" />

    <style>
        html,
        body,
        #viewDiv {
            padding: 0;
            margin: 0;
            height: 100%;
            width: 100%;
        }
    </style>

    <script src="https://js.arcgis.com/4.19/"></script>

    <script>
        require([
            "esri/WebMap",
            "esri/views/MapView",
            "esri/layers/FeatureLayer",
            "esri/widgets/Legend",
            "esri/widgets/Zoom",
            "esri/widgets/Search",
            "esri/widgets/Home",
            "esri/widgets/Locate",
            "esri/widgets/Fullscreen",
            "esri/widgets/Expand"
        ], function(WebMap, MapView, FeatureLayer, Legend, Zoom, Search, Home, Locate, Fullscreen, Expand) {

            const webmap = new WebMap({
                portalItem: { // autocasts as new PortalItem()
                    id: "8a4887950d7546f290b9f2810c97c080"
                }
            });

            const view = new MapView({
                container: "viewDiv",
                map: webmap,
                center: [170.503565668, -45.874113859],
                zoom: 3,
                popup: {
                    dockEnabled: true,
                    dockOptions: {
                        buttonEnabled: false,
                        breakpoint: false
                    }
                }
            }, );


            legend = new Legend({
                view: view
            })

            searchWidget = new Search({
                view: view
            });

            search = new Expand({
                expandIconClass: "esri-icon-search",
                view: view,
                content: searchWidget
            });

            home = new Home({
                view: view
            });

            locate = new Locate({
                view: view
            });

            zoom = new Zoom({
                view: view
            });

            fullscreen = new Fullscreen({
                view: view
            });
			
            view.ui.add([
			{
			component: legend,
			position: "top-right",
			index: 0
			},
			{
			component: home,
			position: "top-left",
			index: 1
			},
			{
			component: search,
			position: "top-left",
			index: 2
			},

			{
			component: locate,
			position: "top-left",
			index: 3
			},
			{
			component: fullscreen,
			position: "top-left",
			index: 0
			}                
			]);

        });
    </script>
</head>

<body>
    <div id="viewDiv"></div>
</body>

</html>
